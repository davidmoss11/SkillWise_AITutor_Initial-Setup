# Development Dockerfile for Frontend  
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install system dependencies for Cypress (Alpine Linux compatible)
RUN apk add --no-cache \
    xvfb \
    gtk+3.0 \
    libnotify-dev \
    nss \
    xauth \
    dbus \
    chromium \
    bash

# Install react-scripts globally
RUN npm install -g react-scripts

# Copy package files
COPY package*.json ./

# Install dependencies with legacy peer deps (needed for some React packages)
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Set environment for React
ENV NODE_ENV=development
ENV WATCHPACK_POLLING=true
ENV FAST_REFRESH=true

# Expose port
EXPOSE 3000

# Start development server with host set to 0.0.0.0
CMD ["npm", "start"]